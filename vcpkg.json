{
	"$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
	"name": "llama",
	"dependencies": [
		"gtest",
		"fmt",
		"spdlog",
		"protobuf",
		"cryptopp"
	],
	"features": {
		"gui": {
			"description": "The graphical user interface modules.",
			"dependencies": [
				"opengl",
				"glfw3",
				"qt5-base"
			]
		},
		"code-checker": {
			"description": "A clang plug-in that adds additional checks to the code.",
			"dependencies": [
				{
					"name": "llvm",
					"features": [
						"clang-tools-extra"
					]
				}
			]
		}
	}
}